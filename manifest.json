{
  "manifest_version": 3,
  "name": "Textolay",
  "version": "2.0.0",
  "description": "Techolay forum mesajlarını Gemini AI kullanarak düzeltir",
  "author": "Wyltre",
  "browser_specific_settings": {
    "gecko": {
      "id": "textolay@wyltre",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://techolay.net/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "commands": {
    "correct-text": {
      "suggested_key": {
        "default": "Alt+Shift+Y",
        "mac": "Alt+Shift+Y"
      },
      "description": "Metni AI ile düzelt"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://techolay.net/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "service_worker": "background.js"
  }
}